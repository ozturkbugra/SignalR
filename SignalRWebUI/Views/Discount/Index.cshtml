@model List<ResultDiscountDto>
@{
	ViewData["Title"] = "İndirimler";
	Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">İndirim İşlemleri</h4>

		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">İndirim Listesi</div>
						<br />
						<a href="/Discount/CreateDiscount" class="btn btn-sm btn-success">Yeni İndirim Girişi</a>

					</div>
					<div class="card-body">
						<div class="card-sub">
							İndirim ile ilgili işlemleri aşağıdan gerçekleştirebilirsiniz
						</div>
						<table class="table mt-3">
							<thead>
								<tr>
									<th scope="col">#</th>
									<th scope="col">Başlık</th>
									<th scope="col">Açıklama</th>
									<th scope="col">Tutar</th>
									<th scope="col">Güncelle</th>
									<th scope="col">Sil</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									<tr>
										<td>@item.DiscountID</td>
										<td>@item.Title</td>
										<td>@item.Description</td>
										<td>@item.Amount</td>
										<td><a href="/Discount/UpdateDiscount/@item.DiscountID" class="btn btn-sm btn-warning">Güncelle</a></td>
										<td><a href="/Discount/DeleteDiscount/@item.DiscountID" class="btn btn-sm btn-danger">Sil</a></td>
									</tr>
								}
							</tbody>
						</table>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
