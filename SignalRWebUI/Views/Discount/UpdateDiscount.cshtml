@model GetDiscountDto
@{
    ViewData["Title"] = "İndirim Güncelle";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">İndirim İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">İndirim Güncelleme</div>
                        </div>
                        <div class="card-body">
                            <input type="hidden" asp-for="DiscountID"/>
                            <div class="form-group">
                                <label for="l">Başlık</label>
                                <input asp-for="Title" class="form-control" id="l">
                            </div>
                            <div class="form-group">
                                <label for="phone">Açıklama</label>
                                <input asp-for="Description" class="form-control" id="phone">
                            </div>
                            <div class="form-group">
                                <label for="mail">Fiyat</label>
                                <input asp-for="Amount" class="form-control" id="mail">
                            </div>
                            <div class="form-group">
                                <label for="fd">Resim</label>
                                <input asp-for="ImageUrl" class="form-control" id="fd">
                            </div>
                        </div>
                        <div class="card-action">
                            <button class="btn btn-success">İndirim Güncelle</button>
                        </div>
                    </div>
                </form>
            </div>

        </div>
    </div>
</div>

