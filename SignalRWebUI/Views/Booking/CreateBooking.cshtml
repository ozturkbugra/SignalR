@model CreateBookingDto
@{
    ViewData["Title"] = "Rezervasyon Ekle";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Rezervasyon İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Yeni Rezervasyon Girişi</div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="name">Ad Soyad</label>
                                <input asp-for="Name" class="form-control" id="name">
                            </div>
                            <div class="form-group">
                                <label for="phone">Telefon</label>
                                <input asp-for="Phone" class="form-control" id="phone">
                            </div>
                            <div class="form-group">
                                <label for="mail">Mail Adresi</label>
                                <input asp-for="Email" class="form-control" id="mail">
                            </div>
                            <div class="form-group">
                                <label for="pc">Kişi Sayısı</label>
                                <input asp-for="PersonCount" class="form-control" id="pc">
                            </div>
                            <div class="form-group">
                                <label for="date">Rezervasyon Tarihi</label>
                                <input asp-for="Date" class="form-control" id="date">
                            </div>
                        </div>
                        <div class="card-action">
                            <button class="btn btn-success">Rezervasyon Ekle</button>
                        </div>
                    </div>
                </form>
            </div>

        </div>
    </div>
</div>

