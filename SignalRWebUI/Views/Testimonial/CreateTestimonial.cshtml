@model CreateTestimonialDto
@{
    ViewData["Title"] = "Referans Ekle";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Referans İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Yeni Referans Girişi</div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="l">Ad</label>
                                <input asp-for="Name" class="form-control" id="l">
                            </div>
                            <div class="form-group">
                                <label for="q">Ünvanı</label>
                                <input asp-for="Title" class="form-control" id="q">
                            </div>
                            <div class="form-group">
                                <label for="2">Yorum</label>
                                <input asp-for="Comment" class="form-control" id="2">
                            </div>
                            <div class="form-group">
                                <label for="e">Resim</label>
                                <input asp-for="ImageUrl" class="form-control" id="e">
                            </div>
                         
                        </div>
                        <div class="card-action">
                            <button class="btn btn-success">Referans Ekle</button>
                        </div>
                    </div>
                </form>
            </div>

        </div>
    </div>
</div>

