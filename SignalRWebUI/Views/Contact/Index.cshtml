@model List<ResultContactDto>
@{
	ViewData["Title"] = "İletişimler";
	Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">İletişim İşlemleri</h4>

		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">İletişim Listesi</div>
						<br />
						<a href="/Contact/CreateContact" class="btn btn-sm btn-success">Yeni İletişim Girişi</a>

					</div>
					<div class="card-body">
						<div class="card-sub">
							İletişim ile ilgili işlemleri aşağıdan gerçekleştirebilirsiniz
						</div>
						<table class="table mt-3">
							<thead>
								<tr>
									<th scope="col">#</th>
									<th scope="col">Lokasyon</th>
									<th scope="col">Mail</th>
									<th scope="col">Telefon</th>
									<th scope="col">Güncelle</th>
									<th scope="col">Sil</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									<tr>
										<td>@item.ContactID</td>
										<td>@item.Location</td>
										<td>@item.Email</td>
										<td>@item.Phone</td>
										<td><a href="/Contact/UpdateContact/@item.ContactID" class="btn btn-sm btn-warning">Güncelle</a></td>
										<td><a href="/Contact/DeleteContact/@item.ContactID" class="btn btn-sm btn-danger">Sil</a></td>
									</tr>
								}
							</tbody>
						</table>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
