@model GetContactDto
@{
    ViewData["Title"] = "İletişim Güncelle";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">İletişim İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">İletişim Güncelleme</div>
                        </div>
                        <div class="card-body">
                            <input type="hidden" asp-for="ContactID"/>
                            <div class="form-group">
                                <label for="l">Lokasyon</label>
                                <input asp-for="Location" class="form-control" id="l">
                            </div>
                            <div class="form-group">
                                <label for="phone">Telefon</label>
                                <input asp-for="Phone" class="form-control" id="phone">
                            </div>
                            <div class="form-group">
                                <label for="mail">Mail Adresi</label>
                                <input asp-for="Email" class="form-control" id="mail">
                            </div>
                            <div class="form-group">
                                <label for="fd">Footer Açıklama</label>
                                <input asp-for="FooterDescription" class="form-control" id="fd">
                            </div>
                        </div>
                        <div class="card-action">
                            <button class="btn btn-warning">İletişim Güncelle</button>
                        </div>
                    </div>
                </form>
            </div>

        </div>
    </div>
</div>

