@model GetSocialMediaDto
@{
    ViewData["Title"] = "Sosyal Medya Güncelle";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Sosyal Medya İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Sosyal Medya Güncelleme</div>
                        </div>
                        <div class="card-body">
                            <input type="hidden" asp-for="SocialMediaID"/>
                            <div class="form-group">
                                <label for="l">Adı</label>
                                <input asp-for="Title" class="form-control" id="l">
                            </div>
                            <div class="form-group">
                                <label for="q">Link</label>
                                <input asp-for="Url" class="form-control" id="q">
                            </div>
                            <div class="form-group">
                                <label for="2">İcon</label>
                                <input asp-for="Icon" class="form-control" id="2">
                            </div>

                        </div>
                        <div class="card-action">
                            <button class="btn btn-success">Sosyal Medya Güncelle</button>
                        </div>
                    </div>
                </form>
            </div>

        </div>
    </div>
</div>

