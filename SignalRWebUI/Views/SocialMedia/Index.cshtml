@model List<ResultSocialMediaDto>
@{
	ViewData["Title"] = "Sosyal Medyaler";
	Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Sosyal Medya İşlemleri</h4>

		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Sosyal Medya Listesi</div>
						<br />
						<a href="/SocialMedia/CreateSocialMedia" class="btn btn-sm btn-success">Yeni Sosyal Medya Girişi</a>

					</div>
					<div class="card-body">
						<div class="card-sub">
							Sosyal Medya ile ilgili işlemleri aşağıdan gerçekleştirebilirsiniz
						</div>
						<table class="table mt-3">
							<thead>
								<tr>
									<th scope="col">#</th>
									<th scope="col">Adı</th>
									<th scope="col">Url</th>
									<th scope="col">Icon</th>
									<th scope="col">Güncelle</th>
									<th scope="col">Sil</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									<tr>
										<td>@item.SocialMediaID</td>
										<td>@item.Title</td>
										<td>@item.Url</td>
										<td>@item.Icon</td>
										<td><a href="/SocialMedia/UpdateSocialMedia/@item.SocialMediaID" class="btn btn-sm btn-warning">Güncelle</a></td>
										<td><a href="/SocialMedia/DeleteSocialMedia/@item.SocialMediaID" class="btn btn-sm btn-danger">Sil</a></td>
									</tr>
								}
							</tbody>
						</table>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
