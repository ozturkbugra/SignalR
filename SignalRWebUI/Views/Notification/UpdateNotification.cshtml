@model GetNotificationDto
@{
    ViewData["Title"] = "Bildirim Güncelle";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Bildirim İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title"> Bildirim Güncelle</div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <input type="hidden" asp-for="NotificationID" />
                                <label for="1">Bildirim Türünü Giriniz</label>
                                <input type="text" asp-for="Type" class="form-control" id="1">
                            </div>
                            <div class="form-group">
                                <label for="2">Bildirim İkonunu Giriniz</label>
                                <input type="text" asp-for="Icon" class="form-control" id="2">
                            </div>
                            <div class="form-group">
                                <label for="Notificationname">Bildirim Açıklamasını Giriniz</label>
                                <input type="text" asp-for="Description" class="form-control" id="Notificationname">
                            </div>
                        </div>
                        <div class="card-action">
                            <button class="btn btn-warning">Bildirim Güncelle</button>
                        </div>
                    </div>
                </form>
            </div>

        </div>
    </div>
</div>

