@model CreateMailDto
@{
    ViewData["Title"] = "Kullanıcı Bilgi Düzenle";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Mail Sayfası</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Mail Gönderme Paneli</div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="1">Alıcı Mail Adresi</label>
                                <input asp-for="RecieverMail" class="form-control" id="1">
                            </div>
                            <div class="form-group">
                                <label for="2">Konu</label>
                                <input asp-for="Subject" class="form-control" id="2">
                            </div>
                            <div class="form-group">
                                <label for="3">Mesaj</label>
                                <textarea rows="5" asp-for="Body" class="form-control" id="3"></textarea>
                            </div>
                           
                        </div>
                        <div class="card-action">
                            <button class="btn btn-warning">Mail Gönder</button>
                        </div>
                    </div>
                </form>
            </div>

        </div>
    </div>
</div>

